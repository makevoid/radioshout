!!!
%html
  %head
    - title = "RadioShout"
    %title= title
    %meta{:content => "width=device-width, initial-scale=1.0, user-scalable=no", :name => "viewport"}/
    %link{ href: "/css/app.css", rel: "stylesheet" }
    %script{:src => "/vendor/markdown.js"}
    %script{:src => "/fivetastic/vendor/all.js"}
    %script{:src => "/vendor/jquery_imagesloaded.js"}
    %script{:src => "/vendor/jquery_clean.js"}

    - host = "radioshout.mkvd.net"
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge" }
    -# %meta{ name: "viewport", content: "width=device-width" }
    - tagline = "#{title} - Shout Your Life"
    - meta_description = "RadioShout nasce dalle menti diaboliche e imprevedibili di un gruppo di ragazzi con tante cose da dire, da fare e da creare. Un laboratorio di espressivit√† collettiva che vuole coinvolgere chiunque voglia dire qualcosa!"
    %meta{ name: "description", content: meta_description }
    %meta{ name: "keywords", content: "radioshout, shout, radio, fiesole, web, interviste, band, firenze, fiorentine, eventi, concerti" }
    %meta{ name: "author", content: "Francesco 'makevoid' Canessa" }
    %meta{ property: "og:title", content: tagline }
    %meta{ property: "og:url", content: "http://#{host}/" }/
    %meta{ property: "og:type", content: "website" }/
    %meta{ property: "og:site_name", content: title }/
    %meta{ property: "og:image", content: "http://#{host}/images/logo_orig_square.png" }/
    %meta{ property: "og:description", content: meta_description }/
    %meta{ property: "fb:admins", content: "redazione.radioshout" }/


    %body
      #container
        #inner_container
          #inner_inner_container
            #header
              %header
                %nav
                  %a{ href: "/" } 		        Home
                  %a{ href: "/la_radio" } 		Radio
                  %a{ href: "/eventi" } 		  Eventi
                  %a{ href: "/shout_world" } 	Mondo Shout
                  %a{ href: "/chi_siamo" } 	  Chi Siamo
                  %a{ href: "/arci" } 	      Arci
                .clear
                #fiveapi_message
                #fiveapi
            #content_outer
              #content_head
                #stream
                  -# %img.status{ src: "http://shoutcast.mixstream.net/status/usa7-vn:8012.gif" }
                  .swf
                    ! <object type="application/x-shockwave-flash" data="http://shoutcast.mixstream.net/flash/MixStreamPlayer.swf" width="335" height="50" id="mixStreamPlayer" style="visibility: visible; "><param name="wmode" value="transparent"><param name="flashvars" value="serverHost=usa7-vn.mixstream.net&amp;serverPort=8012&amp;getStats=0&amp;autoStart=0&amp;textColour=000000&amp;buttonColour=FFFFFF&amp;backgroundURL=none"><a href="http://www.facebook.com/l.php?u=http%3A%2F%2Fusa7-vn.mixstream.net%3A8012%2Flisten.pls&h=jAQFOjgfx">Ascolta la radio</a></object>

                .share
                  %a{ href: "https://twitter.com/#!/redashout" }
                    %img.icon{ src: "/images/icons/twitter.png" }
                  %a{ href: "https://www.facebook.com/pages/RadioShout/137967656273296" }
                    %img.icon{ src: "/images/icons/facebook.png" }
                %h1
                  %a{ href: "/" }
                    / RadioShout
                    %img.logo{ src: "/images/logo_radioshout.png"}
                .clear
              #content
                = yield
              .clear
              %footer
      #bg
        %img{ src: "/images/sfondo2.png"}